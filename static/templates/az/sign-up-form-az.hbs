<form
  class='
    sign-up-form__form 
    {{#if isEmailOnFirstPosition}}sign-up-form__form--auth-with-email{{else}}sign-up-form__form--auth-with-tel{{/if}}
    {{#if formClass}}{{formClass}}{{/if}}
  '
  name={{#if formName}}'{{formName}}'{{else}}'signUp'{{/if}}
>
  <fieldset class='sign-up-form__form-fieldset' name='fieldset'>
    <h2 class='sign-up-form__title'>
      {{#if title}}
        {{title}}
      {{else}}
        Bizə qoşul
      {{/if}}
    </h2>

    {{{ bonusesMarkup }}}

    {{> auth-type-radio-az isEmailOnFirstPosition=isEmailOnFirstPosition }}

    {{#if isEmailOnFirstPosition}}
      <div class='sign-up-form__auth-inputs sign-up-form__auth-inputs--email'>
        <label class='sign-up-form__input-label'>
          <div class='sign-up-form__text-input-label'>E-mail qeyd edin</div>
          <input
            class='sign-up-form__text-input'
            name='email'
            required
            placeholder='email.burada@gmail.com'
            type='email'
            autocomplete='email'
          />
        </label>
      </div>
      <div class='sign-up-form__auth-inputs sign-up-form__auth-inputs--tel'>
        <label class='sign-up-form__input-label'>
          <div class='sign-up-form__text-input-label'>
            Telefon nömrənizi qeyd edin
          </div>
          <div class='sign-up-form__tel-input-wrapper'>
            <div class='sign-up-form__input-stub'>
              {{> svg-icon class='sign-up-form__country-img' width="24" height="20" name='azerbaijan-flag' }}

              <span>+994</span>
            </div>
            <input
              class='sign-up-form__text-input'
              name='tel'
              type='tel'
              autocomplete='off'
              placeholder='          '
              data-slots=' '
            />
          </div>
        </label>
      </div>
    {{else}}
      <div class='sign-up-form__auth-inputs sign-up-form__auth-inputs--tel'>
        <label class='sign-up-form__input-label'>
          <div class='sign-up-form__text-input-label'>
            Telefon nömrənizi qeyd edin
          </div>
          <div class='sign-up-form__tel-input-wrapper'>
            <div class='sign-up-form__input-stub'>
              {{> svg-icon class='sign-up-form__country-img' width="24" height="20" name='azerbaijan-flag' }}

              <span>+994</span>
            </div>
            <input
              class='sign-up-form__text-input'
              name='tel'
              type='tel'
              required
              autocomplete='off'
              placeholder='          '
              data-slots=' '
            />
          </div>
        </label>
      </div>
      <div class='sign-up-form__auth-inputs sign-up-form__auth-inputs--email'>
        <label class='sign-up-form__input-label'>
          <div class='sign-up-form__text-input-label'>E-mail qeyd edin</div>
          <input
            class='sign-up-form__text-input'
            name='email'
            placeholder='email.burada@gmail.com'
            type='email'
            autocomplete='email'
          />
        </label>
      </div>
    {{/if}}

    <div class='sign-up-form__auth-error js-auth-error'></div>
    <div class='sign-up-form__auth-inputs sign-up-form__auth-inputs--email sign-up-form__auth-inputs--tel'>
      <label class='sign-up-form__input-label'>
        <div class='sign-up-form__text-input-label'>Şifrə</div>
        <div class='sign-up-form__text-input-wrapper'>
          <input
            class='sign-up-form__text-input'
            name='password'
            required
            placeholder='******'
            type='password'
            minlength='6'
            autocomplete='off'
          />
          <button
            class='sign-up-form__password-input-btn sign-up-form__password-input-btn--pass-hidden js-password-input-btn'
            type='button'
            aria-label='Şifrəni göstərmək/gizlətmək üçün bura klikləyin'
          >
            {{> svg-icon
            class='sign-up-form__password-btn-icon sign-up-form__password-btn-icon--off'
            width='20'
            height='20'
            name='eye-off'
          }}
          {{> svg-icon
            class='sign-up-form__password-btn-icon sign-up-form__password-btn-icon--on'
            width='20'
            height='20'
            name='eye-on'
          }}
          </button>
        </div>
      </label>
    </div>
    <div class='sign-up-form__country-wrapper'>
      <div>
        <span>Ölkə</span>
        <div class='sign-up-form__input-stub'>
          {{> svg-icon class='sign-up-form__country-img' width="24" height="20" name='azerbaijan-flag' }}

          <span>Azərbaycan</span>
        </div>
      </div>
      <div>
        <span>Valyuta</span>
        <div class='sign-up-form__input-stub'>AZN</div>
      </div>
    </div>
    <label class='sign-up-form__agree-wrapper'>
      <input
        class='sign-up-form__check-input js-agree-checkbox'
        checked
        type='checkbox'
        required
        name='agreeCheck'
      />
      <span class='sign-up-form__check-box'></span>
      <div>
        Qeydiyyat üçün saytın qaydaları və şərtləri ilə 
        <span class='sign-up-form__accent-text'>razılaşmaq lazımdır</span>
      </div>
    </label>
    <div class='sign-up-form__divider'></div>
    <button
      class='app-button app-button--disabled sign-up-form__submit-btn js-submit-btn'
      name='submitBtn'
      type='submit'
      aria-label='Abunə olun'
    >
      <div class='sign-up-form__submit-loader'>
        {{> svg-icon
          class='sign-up-form__submit-loader-icon sign-up-form__submit-loader-icon--first'
          width='24'
          height='24'
          name='loader-part-1'
        }}
        {{> svg-icon
          class='sign-up-form__submit-loader-icon sign-up-form__submit-loader-icon--second'
          width='24'
          height='24'
          name='loader-part-2'
        }}
        <span>Yüklənir</span>
      </div>
      <div class='sign-up-form__submit-btn-content'>
        {{#if submitText}}
          {{submitText}}
        {{else}}
          Abunə olun
        {{/if}}
      </div>
    </button>
  </fieldset>
</form>